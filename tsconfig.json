{
  "compilerOptions": {
    // Where compiled JS goes
    "rootDir": "./",
    "outDir": "./dist",

    // Node-friendly module setup (ES modules)
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "types": ["node"],

    // Nice-to-have options
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },

  // Only compile our source folders
  "include": [
    "core",
    "cli",
    "mcp-server"
  ]
}
